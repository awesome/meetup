<div class="container main">
  <h1>New Comment</h1>

  <div class="text-center">
    <% if @comment.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@comment.errors.count, "error") %> Stopped this comment from saving</h2>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= form_for [@group, @comment] do |form| %>

    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: "form-control", placeholder: "Title" %>
    </div>

    <div class="form-group">
      <%= form.label :comment %>
      <%= form.text_field :comment, class: "form-control", placeholder: "What is on your mind?" %>
    </div>

    <div class="hide">
      <%= form.number_field :user_id, value: current_user.id %>
    </div>

    <%= form.submit "Submit", class: "btn btn-info" %>

  <% end %>
</div>
