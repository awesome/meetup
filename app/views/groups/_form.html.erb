<div class="container">

  <div class="text-center">
    <% if @group.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@group.errors.count, "error") %> Stopped this Group from saving</h2>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :topic %>
    <%= form.text_field :topic, class: "form-control", placeholder: "Group Topic" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control", placeholder: "Group Description" %>
  </div>

  <div class="hide">
    <%= form.number_field :user_id, value: current_user.id %>
  </div>

  <%= form.submit "Submit", class: "ui inverted grey button" %>

</div>